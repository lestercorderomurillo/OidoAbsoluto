<View title="%%passchange%%">
    <ServiceBanner>
    <Container>
        <Row>
            <Column size="6">
                <Spacing>
                <Image source="logo2.png">
                <Spacing>
                <Card maxWidth="600px">
                    <Form id="resetPasswordForm" route="newpass/submit">
                        <HiddenField id="token" value="{token}">
                        <IconifiedTitle source="profile.png">
                            %%passchange%%
                        </IconifiedTitle>
                        <Label for="password">
                            %%newpass%%
                        </Label> 
                        <Passfield id="password">
                        <Label for="confirmPassword">
                           %%confirmpass%%
                        </Label> 
                        <Passfield id="confirmPassword">
                        <SubmitButton>
                            %%updatepass%%
                        </SubmitButton>
                        <Spacing>
                        <Span>
                            %%postpass%%
                        </Span>
                    </Form>
                </Card>
            </Column>
        </Row>
    </Container>
</View>