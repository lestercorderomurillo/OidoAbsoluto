<View title="%%logintitle%%">
    <ServiceBanner>
    <Container>
        <Row>
            <Column>
                <Spacing>
                <Image source="logo2.png">
                <Spacing>
                <Card size="8" maxWidth="600px">
                    <Form id="loginForm" route="login/submit">
                        <PersistentMessage>
                        <Label>
                            %%welcome%%
                        </Label>
                        <Spacing>
                        <Label for="email">
                            %%email%%
                        </Label> 
                        <Textfield id="email">
                        <Label for="password">
                            %%password%%
                        </Label>   
                        <Passfield id="password">
                        <SubmitButton>
                            %%login%%
                        </SubmitButton>
                        <RedirectButton route="signup">
                            %%signup%%
                        </RedirectButton>
                        <Spacing>
                        <Span>
                            %%forgot%%
                        </Span>
                        <Link route="forgot">
                            %%recover%%
                        </Link>
                    </Form>
                </Card>
                <Spacing>
            </Column>
        </Row>
    </Container>
</View>