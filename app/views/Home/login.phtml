<View title="Inicio de sesión">
    <Row>
        <Card columnSize="8" maxWidth="600px">
            <Form route="login/submit">
                <IconifiedTitle source="profile.png">Inicio de sesión</IconifiedTitle>
                <Span>Sírvase de acceder al servicio para realizar o consultar su historial de pruebas</Span>
                <Label for="email">Correo Electrónico</Label> 
                <Textfield bind="email">
                <Label for="password">Contraseña</Label>   
                <Passfield>
                <SubmitButton>Acceder al Proyecto</SubmitButton>
                <RedirectButton route="signup">O bien, Crear cuenta</RedirectButton>
                <Spacing>
                <Span>¿Olvidó su contraseña o no puede acceder a su cuenta?</Span>
                <Link route="forgot">Haga click en este enlace para recuperar su contraseña</Link>
            </Form>
        </Card>
    </Row>
</View>