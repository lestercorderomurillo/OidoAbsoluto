<View title="%%profile00%%">
    <ServiceBanner>
    <Spacing>
    <Container>
        <Row>
            <Column smallSize="12" mediumSize="12" size="9" xlSize="8">
                <Card>
                    <IconifiedTitle source="profile.png">
                        %%profile01%% {username}
                    </IconifiedTitle>
                    <PersistentMessage>
                    <LoggedIn role="User">
                        <Label>
                            %%profile02%%
                        </Label>
                        <Spacing>
                        <RedirectButtonTooltip route="piano?displayMode=Full" tooltip="%%profile26%%">
                            <i class="fa fa-play fa-lg pr-2" aria-hidden="true"></i>
                            %%profile03%%
                        </RedirectButtonTooltip>
                        <RedirectButtonTooltip route="piano?displayMode=Simple" tooltip="%%profile27%%">
                            <i class="fa fa-keyboard-o fa-lg pr-2" aria-hidden="true"></i>
                            %%profile04%%
                        </RedirectButtonTooltip>
                        <Spacing>
                        <Title>
                            %%profile05%%
                        </Title>
                        <If value="{noTests}" equals="true">
                            %%profile06%%
                        </If>
                        <If value="{noTests}" equals="false">
                            <Label>
                                %%profile07%%
                                <Spacing>
                                %%profile08%%
                            </Label>
                            <Spacing>
                            <Row>
                                <Column smallSize="12" mediumSize="12" size="12" xlSize="12" padding="1">
                                    <Card padding="2">
                                        <div class="table-responsive">
                                            <table class="table table-sm">
                                                <tr>
                                                    <th>%%profile09%%</th>
                                                    <th>%%profile10%%</th>
                                                    <th>%%profile11%%</th>
                                                    <th>%%profile12%%</th>
                                                </tr>
                                                <Foreach from="{tests}" using="i">
                                                    <tr id="row-{parent.i.try}" (click)="window.location = '{host}overview?testToken={parent.i.token}'" class="Hover">
                                                        <td>
                                                            {parent.i.try}
                                                        </td>
                                                        <td>
                                                            {parent.i.uploadDate}
                                                        </td>
                                                        <td>
                                                            {parent.i.displayMode}
                                                        </td>
                                                        <td>
                                                            {parent.i.totalTime}
                                                        </td>
                                                    </tr>
                                                </Foreach>
                                            </table>
                                        </div>
                                    </Card>
                                </Column>
                            </Row>
                            <Spacing>
                        </If>
                    </LoggedIn>
                    <LoggedIn role="Admin">
                        <Title>
                            %%profile13%%
                        </Title>
                        <Label>
                            %%profile14%%
                            <Spacing>
                            %%profile15%%
                        </Label>
                        <Spacing>
                        <Row>
                            <Column smallSize="12" mediumSize="12" size="12" xlSize="12" padding="1">
                                <Card padding="2">
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <tr>
                                                <th>%%profile16%%</th>
                                                <th>%%profile17%%</th>
                                                <th>%%profile18%%</th>
                                                <th>%%profile19%%</th>
                                                <th>%%profile20%%</th>
                                                <th>%%profile21%%</th>
                                                <th>%%profile22%%</th>
                                                <th>%%profile23%%</th>
                                            </tr>
                                            <Foreach from="{users}" using="i">
                                                <tr id="{parent.random}" (click)="window.location = '{host}lookup?userToken={parent.i.token}'" class="Hover">
                                                    <td>
                                                        {parent.i.firstName} {parent.i.lastName}
                                                    </td>
                                                    <td>
                                                        {parent.i.email}
                                                    </td>
                                                    <td>
                                                        <If value="{parent.i.role}" equals="0">
                                                            %%profile24%%
                                                        </If>
                                                        <If value="{parent.i.role}" equals="1">
                                                            %%profile25%%
                                                        </If>
                                                    </td>
                                                    <td>
                                                        {parent.i.birthDay}
                                                    </td>
                                                    <td>
                                                        {parent.i.phone}
                                                    </td>
                                                    <td>
                                                        {parent.i.gender}
                                                    </td>
                                                    <td>
                                                        {parent.i.country}
                                                    </td>
                                                    <td>
                                                        {parent.i.tries}
                                                    </td>
                                                </tr>
                                            </Foreach>
                                        </table>
                                        <div>
                                            <RedirectButton route="profile?page=[{page}-1]" accent="Info" disabled="{isFirstPage}">&#8592;</RedirectButton>
                                            <RedirectButton route="profile?page=[{page}+1]" accent="Info" disabled="{isLastPage}">&#8594;</RedirectButton>
                                        </div>
                                    </div>
                                </Card>
                            </Column>
                        </Row>
                    </LoggedIn>
                </Card>
            </Column>
        </Row>
    </Container>
</View>